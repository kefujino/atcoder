n,q = map(int,input().split())

r = [[] for i in range(n+1)]
# [[], [], [], [], [], [], []]

v = [0 for i in range(n+1)]
# [0, 0, 0, 0, 0, 0, 0]
 
for i in range(n-1):
    a,b = map(int,input().split())
    r[a].append(b)
# [[], [2, 3], [4, 5], [6], [], [], []]

for i in range(q):
    p,x = map(int,input().split())
    v[p] += x
# [0, 20, 0, 0, 0, 0, 0]
